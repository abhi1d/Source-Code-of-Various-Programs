# include <stdio.h>
# include <stdlib.h>

struct node {
	int data;
	struct node *link;
};
struct node *head = NULL;

int len() {
	int l = 0;
	struct node *temp;
	temp = head;
	while(temp!=NULL) {
		temp = temp->link;
		l++;
	}
	return l;
}

void insert() {
	int d, l;
	struct node *new;
	new = (struct node*)malloc(sizeof(struct node));
	printf("Enter data and location: ");
	scanf("%d%d", &d, &l);
	l--;

	new->data = d;
	new->link = NULL;

	if(head == NULL)
		head = new;
	else {
		if(l==0) {
			new->link = head;
			head = new;
		}
		else if(l==len()) {
			struct node *temp;
			temp = head;
			while(temp->link!=NULL)
				temp = temp->link;
			temp->link = new;
		}
		else {
			struct node *temp;
			temp = head;
			int i;
			for(i=0; i<l-1; i++)
				temp = temp->link;
			new->link = temp->link;
			temp->link = new;
		}
	}
}

void delete() {
	int l, i;
    printf("\nEnter the element number to be deleted: ");
	scanf("%d", &l);
	l--;

	struct node *temp;
    temp = head;

    if(l==0) {
    	head = head->link;
    	temp->link = NULL;
    }
    else if(l==len()) {
    	for(i=0; i<l-1; i++)
    		temp = temp->link;
    	temp->link = NULL;
    }
    else {
    	struct node *temp1;
    	for(i=0; i<l-1; i++)
			temp = temp->link;
		temp1 = temp->link;
		temp->link = temp1->link;
		temp1->link = NULL;
    }
}

void traverse() {
	struct node *temp1;
	temp1 = head;
	printf("The list is: ");
	while(temp1 != NULL) {
		printf("%d ", temp1->data);
		temp1 = temp1->link;
	}
	printf("\n");
}

int main() {
	int c = 1;
	while(c==1 || c==2 || c==3) {
		puts("\nEnter your choice:\n1.Add element\n2.Traverse\n3.Delete\n4.Exit");
		scanf("%d", &c);
		if(c==1)
			insert();
		else if(c==2)
			traverse();
		else if(c==3)
		    delete();
		else
			break;
	}
}
